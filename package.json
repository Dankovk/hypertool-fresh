{
  "name": "studio",
  "version": "0.1.0",
  "packageManager": "bun@1.3.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "packages/runtime",
    "packages/shared-config"
  ],
  "scripts": {
    "dev": "turbo run dev dev:convex",
    "dev:frontend": "bun --cwd=frontend run dev",
    "dev:backend": "bun --cwd=backend run dev",
    "dev:hyper-runtim": "bun --cwd=hyper-runtime run dev",
    "dev:convex": "bun run scripts/pre-convex.sh && bunx convex dev",
    "build": "turbo run build",
    "build:frontend": "cd hyper-runtime && bun run build && cd .. && cd frontend && bun run build",
    "build:backend": "cd backend && bun run build",
    "start": "NODE_ENV=production turbo start",
    "start:backend": "cd backend && bun run start",
    "lint": "next lint",
    "typecheck": "bunx --bun turbo run typecheck",
    "typecheck:frontend": "tsc -p tsconfig.json --noEmit",
    "typecheck:backend": "cd backend && bun run typecheck",
    "migrate:boilerplates": "bun run scripts/migrate-boilerplates.ts"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "typescript": "5.6.2"
  },
  "dependencies": {
    "convex": "^1.28.0"
  }
}
