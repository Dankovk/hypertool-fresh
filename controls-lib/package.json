{
  "name": "@hypertool/controls",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:lib && bun run build:types",
    "build:lib": "bun build src/index.ts --outdir dist --target browser --minify --sourcemap=external",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun run build:lib --watch"
  },
  "peerDependencies": {
    "tweakpane": "^4.0.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.2",
    "tweakpane": "^4.0.5"
  }
}
